{
  "name": "node-typescript-api",
  "version": "0.0.1",
  "author": {
    "name": "Michal Jarnot",
    "email": "m.jarnot@yahoo.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && node_modules/.bin/babel src --out-dir build --copy-files --extensions '.js,.ts'",
    "dev": "node_modules/.bin/nodemon -L --exec \"node_modules/.bin/babel-node --extensions '.js,.ts' src/index.ts\"",
    "db:migrate": "node_modules/.bin/knex migrate:latest --knexfile=./knexfile.ts",
    "db:rollback": "node_modules/.bin/knex migrate:rollback --knexfile=./knexfile.ts",
    "db:seed": "node_modules/.bin/knex seed:run --knexfile=./knexfile.ts",
    "test": "node_modules/.bin/jest -i --forceExit --detectOpenHandles",
    "test:coverage": "node_modules/.bin/jest -i --forceExit --detectOpenHandles --coverage",
    "heroku-postbuild": "npm run build && npm run db:migrate",
    "prod": "node build"
  },
  "type-check": "tsc",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --loglevel warn",
      "tslint --force --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "3.0.3",
    "boom": "7.3.0",
    "dotenv": "6.2.0",
    "ip": "1.1.5",
    "jsonschema": "1.2.4",
    "jsonwebtoken": "8.4.0",
    "kcors": "^2.2.2",
    "knex": "0.16.3",
    "koa": "2.6.2",
    "koa-bodyparser": "4.2.1",
    "koa-compose": "4.1.0",
    "koa-mount": "^4.0.0",
    "koa-router": "7.4.0",
    "koa-static": "^5.0.0",
    "moment": "^2.22.2",
    "objection": "1.5.0",
    "pg": "7.8.0",
    "pino": "5.10.8",
    "ramda": "0.26.1",
    "redoc": "^2.0.0-rc.1",
    "slugify": "1.3.4",
    "superagent": "^4.1.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/plugin-proposal-json-strings": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-syntax-import-meta": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-typescript": "7.1.0",
    "@types/bcrypt": "3.0.0",
    "@types/boom": "7.2.1",
    "@types/dotenv": "6.1.0",
    "@types/ip": "1.1.0",
    "@types/jest": "23.3.13",
    "@types/jsonschema": "1.1.1",
    "@types/jsonwebtoken": "8.3.0",
    "@types/kcors": "^2.2.3",
    "@types/knex": "0.15.1",
    "@types/koa": "2.0.48",
    "@types/koa-bodyparser": "5.0.2",
    "@types/koa-compose": "3.2.2",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-router": "7.0.38",
    "@types/koa-static": "^4.0.0",
    "@types/moment": "^2.13.0",
    "@types/node": "10.12.18",
    "@types/pino": "5.8.3",
    "@types/ramda": "0.25.47",
    "@types/sendgrid": "^4.3.0",
    "@types/sinon": "7.0.4",
    "@types/superagent": "^3.8.6",
    "@types/supertest": "2.0.7",
    "@types/twilio": "^0.0.10",
    "@types/uuid": "3.4.4",
    "babel-plugin-module-resolver": "3.1.3",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "nodemon": "1.18.9",
    "prettier": "1.16.0",
    "sinon": "7.2.3",
    "supertest": "3.4.1",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
